{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "allowJs": true,
    "outDir": "./scripts",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  "files": [
    "./node_modules/moment/moment.d.ts"
  ],
}
